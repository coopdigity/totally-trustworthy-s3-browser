{
  "name": "s3browser",
  "version": "1.0.0",
  "description": "Cross-platform S3 bucket browser",
  "main": "dist-electron/main/main.js",
  "author": "Jeremiah Cooper <jbzcooper@gmail.com> (https://coopdigity.com/)",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "vue-tsc --noEmit && vite build --mode electron && electron-builder"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.699.0",
    "@aws-sdk/credential-providers": "^3.699.0",
    "vue": "^3.5.13",
    "pinia": "^2.2.8",
    "element-plus": "^2.9.1",
    "@element-plus/icons-vue": "^2.3.1",
    "@iconify/vue": "^4.1.2",
    "@iconify-json/vscode-icons": "^1.2.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.1.10"
  },
  "build": {
    "appId": "com.resight.s3browser",
    "productName": "S3 Browser",
    "icon": "src/renderer/assets/pinky-promise-outline.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "src/renderer/assets/pinky-promise-outline.png"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "icon": "src/renderer/assets/pinky-promise-outline.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src/renderer/assets/pinky-promise-outline.png"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Development",
      "icon": "src/renderer/assets/pinky-promise-outline.png"
    }
  }
}
